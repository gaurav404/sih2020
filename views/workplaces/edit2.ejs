<%- include('../partials/header') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= workplace.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/workplaces/<%= workplace._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="workplace[name]" value="<%= workplace.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workplace[image]" value="<%= workplace.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="workplace[description]" value="<%= workplace.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/workplaces">Go Back</a>
        </div>
    </div>
</div>
<% include('../partials/footer')%>

