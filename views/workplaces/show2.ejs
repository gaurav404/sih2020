<%- include('../partials/header') %>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"> Booking Info </p>
            <div class="list-group">
                <li class="list-group-item active"> Ph. No = 92839-23131 </li>
                <li class="list-group-item"> Clinic Address = </li>
                <li class="list-group-item"> </li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= workplace.image %>">
                <div class="caption-full">
                    <!--<h4 class="pull-right">$9.00/night</h4>-->
                    <h4><a><%=workplace.name%></a></h4>
                    <hr>
                    <hr>
                    <h4><strong> Location : </strong><%=workplace.location%></h4>
                    
                   <p> <strong>  Accessibility : </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.accessibility;
        	                for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                	</div>





                   <p> <strong>    Pay Gap : </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.paygap;
                            for (var i = 0; i < 3; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                    </div>





                   <p> <strong>  Inclusivity : </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.inclusivity;
                            for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                    </div>




                                       <p> <strong>  Maternity Leave : </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.maternityleave;
                            for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                    </div>



                                       <p> <strong> Workplace Harassment rating: </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.workplaceharassment;
                            for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                    </div>




                                       <p> <strong> Casual sexism rating: </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = workplace.casualsexism;
                            for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                    </div>









                    
                    	
	             </div>	
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    
                    <p><%= workplace.description %></p>
                    <!--<p>-->
                    <!--    <em>Submitted By <%= workplace.author.username %></em>-->
                    <!--</p>-->
                    <% if(locals.user && workplace.author.id.equals(locals.user)){ %>
                        <a class="btn btn-xs btn-warning" href="/workplaces/<%= workplace._id %>/edit">Edit</a>
                        <form id="delete-form" action="/workplaces/<%= workplace._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/workplaces/<%= workplace._id %>/comments/new2">Add New Comment</a>
                </div>
                <hr>
                <% workplace.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        <% if(locals.user && comment.author.id.equals(locals.user._id)){ %>
                            <a class="btn btn-xs btn-warning" 
                               href="/workplaces/<%=workplace._id %>/comments/<%=comment._id %>/edit">Edit</a>
                            <form id="delete-form" action="/workplaces/<%=workplace._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                        <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include('../partials/footer') %>