<%- include('../partials/header') %>

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             
             <h1> SWARAKSHA SAHAYAK </h1>
             <p> View our wide database of Doctors and medical practitioners </p>
             <p>  <a href="/doctors/new" class="btn btn-primary btn-large"> Rate your Doctor </a></p>
             <p>
                <!--<a class="btn btn-primary btn-large" href="/doctors/new">Add New Doctor</a>-->
             </p>
         </div>
     </header>  
     
     
     
     
     
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         
         <div class="col-md-12">
         <% if(noMatch !== null){%>
         
         <h3> Sorry. No match has been found in our Database. Please try again </h3>
          <form action="/doctors" method="GET" class="form-inline">
        
        <div class="form-group">
          <input type="text" name="search" placeholder="  Search . . . " class="form-control">
          <input type="submit" value="search" placeholder="  Search . . . " class="btn btn-primary">
        </div>
     
      </form>
          <% }%>
         
         </div>
        <% doctors.forEach(function(doctor){ %>
            <div class="col-sm-2">
                
            </div>
            <div class="col-sm-8 docindex">
                <div class="thumbnail">
                   <img src="<%= doctor.image %>">
                   <!--<div class="caption">-->
                   <!--    <h4><strong> Name: </strong><%= doctor.name %></h4>-->
                       
                   <!--</div>-->
                   <div class="specs">
                        <strong> Name : </strong><%= doctor.name %>
                   </div>
                     
                    <p> <strong>  Rating : </strong>  </p>    
                    <div class="ratings-show">
                       
                         <p>
                         <% var star_rating = doctor.rating;
        	                for (var i = 0; i < 5; i++) { %>
                     <span class="glyphicon glyphicon-star<%= (i < star_rating - 0.5)? '' : '-empty empty-star'%>"></span>
                         <% } %>
                         </p>
                	</div>
                	
                	
                	

                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                	
                   
                   <div class="specs">
                        <strong> Specialization : </strong><%= doctor.specialization %>
                   </div>
                      
                   <p>
                       <a href="/doctors/<%= doctor._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
            
            <div class="col-sm-2">
                
            </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>
